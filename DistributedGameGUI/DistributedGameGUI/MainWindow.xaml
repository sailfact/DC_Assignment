<Window x:Class="DistributedGameGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DistributedGameGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="900" Loaded="Window_Loaded">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
            <MenuItem Header="Friends" Height="16" Width="52" Click="MenuItem_Friends"/>
            <MenuItem Header="Heroes" Height="16" Width="51" Click="MenuItem_Heroes"/>
        </Menu>
    </Grid>
</Window>
